{
  "name": "openevidence-mcp",
  "version": "1.0.0",
  "description": "MCP server for OpenEvidence (unofficial, browser-session based)",
  "main": "dist/server.js",
  "bin": {
    "openevidence-mcp": "dist/server.js",
    "openevidence-mcp-login": "dist/login.js"
  },
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "login": "tsx src/login.ts",
    "check": "tsc -p tsconfig.json --noEmit",
    "smoke": "tsx src/smoke.ts"
  },
  "files": [
    "dist",
    "README.md",
    "README.AI.md",
    "LICENSE",
    "examples",
    "docs"
  ],
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "mcp",
    "openevidence",
    "playwright",
    "codex",
    "claude"
  ],
  "author": "openevidence-mcp contributors",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "dotenv": "^17.3.1",
    "playwright": "^1.58.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
